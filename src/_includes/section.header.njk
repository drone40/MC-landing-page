        let height = Number(document.getElementById("height").value);
const age = Number(document.getElementById("age").value);
const activityLevel = Number(document.querySelector('input[name="activity-level"]:checked').value);
const goal = document.querySelector('input[name="goal"]:checked').value;
    // Convert units if using Imperial system
    // if (measurementSystem === "imperial") {
      // Convert weight to kg
      if (document.getElementById("weight-units").value === "lb") {
        weight = weight / 2.20462;
      }
      // Convert height to cm
      if (document.getElementById("height-units").value === "in") {
        height = height * 2.54;
      }
    // }

    // Calculate BMR
    let bmr;
    if (gender === "male") {
      bmr = 10 * weight + 6.25 * height - 5 * age + 5;
    } else {
      bmr = 10 * weight + 6.25 * height - 5 * age - 161;
    }

    // Calculate TDEE
    let tdee;
    if (activityLevel === 1.2) {
      tdee = bmr * 1.2;
    } else if (activityLevel === 1.375) {
      tdee = bmr * 1.375;
    } else if (activityLevel === 1.55) {
      tdee = bmr * 1.55;
    } else if (activityLevel === 1.725) {
      tdee = bmr * 1.725;
    } else {
      tdee = bmr * 1.9;
    }

    // Adjust TDEE for goal
    if (goal === "lose") {
      tdee = tdee * 0.8;
    } else if (goal === "maintain") {
      tdee = tdee;
    } else {
      tdee = tdee * 1.2;
    }

    // Display result
    document.getElementById("result").innerHTML = `Your BMR is ${bmr.toFixed(2)} calories/day, and your TDEE is ${tdee.toFixed(2)} calories/day.`;
  }
</script>
